{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:dev": "sh -ac '. ./.env.development; . ./.env.development.local; nest build'",
    "build:prod": "sh -ac '. ./.env.production; . ./.env.production.local; nest build'",
    "start:dev": "sh -ac '. ./.env.development; . ./.env.development.local; nest start --debug --watch'",
    "start:prod": "sh -ac '. ./.env.production; . ./.env.production.local; node dist/main'",
    "prisma:migrate:dev": "sh -ac '. ./.env.development; . ./.env.development.local; prisma migrate dev'",
    "prisma:migrate:prod": "sh -ac '. ./.env.production; . ./.env.production.local; prisma migrate deploy'",
    "prisma:seed:dev": "sh -ac '. ./.env.development; . ./.env.development.local; prisma db seed'",
    "prisma:seed:prod": "sh -ac '. ./.env.production; . ./.env.production.local; prisma db seed'",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest --ui",
    "test:cov": "vitest --ui --coverage",
    "test:debug": "vitest --ui --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest --ui --config ./vitest.config.e2e.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@anatine/zod-nestjs": "^2.0.1",
    "@anatine/zod-openapi": "^2.0.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.3.0",
    "@prisma/client": "^4.15.0",
    "@types/bcrypt": "^5.0.0",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "openapi3-ts": "^4.1.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.68",
    "@types/express": "^4.17.13",
    "@types/node": "18.16.12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-perfectionist": "^1.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.3.2",
    "prisma": "^4.15.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.0",
    "unplugin-swc": "^1.3.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.33.0"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "lint-staged": {
    "*.{ts}": [
      "lint",
      "vitest related --run --no-ui --coverage --passWithNoTests"
    ]
  }
}
